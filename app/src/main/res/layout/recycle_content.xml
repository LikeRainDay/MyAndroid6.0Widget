<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cd_ContainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_recyclePicture"
            android:layout_width="120dp"
            android:layout_height="109dp"
            android:src="@mipmap/night_share_qq_icon" />

        <TextView
            android:id="@+id/tv_contentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_recyclePicture"
            android:text="标题头"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_contentSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contentTitle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_recyclePicture"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="20"
            android:text="内容摘要"
            android:textSize="20sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
